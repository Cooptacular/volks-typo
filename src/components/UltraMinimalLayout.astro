---
import '@fontsource/work-sans/400.css';
import '@fontsource/work-sans/500.css';
import '@fontsource/work-sans/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  showSidebar?: boolean;
}

const { title, description, showSidebar = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href={import.meta.env.BASE_URL} />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <title>{title}</title>
  </head>
  <body>
    <div class="site-wrapper">
      <header class="site-header">
        <div class="header-content">
          <div class="site-title">
            <a href={`${import.meta.env.BASE_URL}ultra-minimal`}>
              <img src={`${import.meta.env.BASE_URL}site-title.svg`} alt="Volks-Typo Ultra Minimal" class="title-svg" />
            </a>
          </div>
          
          <nav class="main-navigation" role="navigation" aria-label="Main navigation">
            <ul class="nav-list">
              <li><a href={`${import.meta.env.BASE_URL}blog`} class="nav-link">Blog</a></li>
              <li><a href={`${import.meta.env.BASE_URL}categories`} class="nav-link">Categories</a></li>
              <li><a href={`${import.meta.env.BASE_URL}about`} class="nav-link">About</a></li>
            </ul>
          </nav>
        </div>
      </header>
      
      <main class="main-content">        
        <div class="content">
          <slot />
        </div>
      </main>
      
      <footer class="site-footer">
        <div class="footer-content">
          <p>&copy; 2024 Volks-Typo Ultra Minimal. Built with Astro.</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  .site-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
  }

  .site-header {
    background-color: var(--color-white);
    padding: calc(var(--grid-unit) * 3) 0;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .site-title a {
    display: block;
    line-height: 0;
  }

  .title-svg {
    height: 48px;
    width: auto;
    max-width: 280px;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: calc(var(--grid-unit) * 3);
  }

  .nav-link {
    font-family: var(--font-body);
    font-weight: 500;
    color: var(--color-text-primary);
    padding: calc(var(--grid-unit) / 2) calc(var(--grid-unit));
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .nav-link:hover,
  .nav-link:focus {
    text-decoration: underline;
  }

  .site-footer {
    background-color: var(--color-white);
    padding: calc(var(--grid-unit) * 4) 0;
    text-align: center;
  }

  .footer-content p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      text-align: center;
      gap: calc(var(--grid-unit) * 1.5);
    }

    .nav-list {
      gap: calc(var(--grid-unit) * 2);
    }

    .nav-link {
      font-size: 0.9rem;
      padding: calc(var(--grid-unit) / 2);
    }
  }
</style>